# Application
APP_NAME="ChortDomains"
DEBUG=true
DEV_MODE=true
DEV_USER_ROLE=admin

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=chortdomains
POSTGRES_PASSWORD=chortdomains
POSTGRES_DB=chortdomains

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Authentik OAuth2 (configure for production)
AUTHENTIK_ISSUER=https://auth.example.com/application/o/chortdomains/
AUTHENTIK_CLIENT_ID=your-client-id
AUTHENTIK_CLIENT_SECRET=your-client-secret
AUTHENTIK_ACCESS_GROUP=chortdomains - access
AUTHENTIK_ADMIN_GROUP=chortdomains - admin

# CORS
CORS_ORIGINS='["http://localhost:3000", "http://localhost:8000"]'

# Server capacity
DEFAULT_CAPACITY_MODE=1:5

# WebSocket
WS_HEARTBEAT_INTERVAL=30

# Locks
LOCK_TIMEOUT=300